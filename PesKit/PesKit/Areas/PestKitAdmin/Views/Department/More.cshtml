@model Department


<div class="container">
    <h3 class="fw-bold m-3">@Model.Name Employees</h3>
    <h4 class="fw-normal mx-5 my-3">Employees Count: @Model.Employees.Count</h4>
</div>
<div class="card-group">
    @foreach (Employee employee in Model.Employees)
    {
        <div class="card m-1 bg-primary text-white rounded-3">
            <img src="~/img//@employee.ImgUrl"
                 alt="@employee.Name" class="card-img-top">
            <div class="card-body">
                <h5 class="card-title text-white">Name: @employee.Name @employee.Surname</h5>
                <p class="card-text">Position: @employee.Position.Name</p>
                <p class="card-text">Instagram: <a>@employee.InstLink @(employee.InstLink != null ? "" : "N/A")</a></p>
                <p class="card-text">Facebook: <a>@employee.FaceLink@(employee.FaceLink != null ? "" : "N/A")</a></p>
                <p class="card-text">Twitter: <a>@employee.TwitLink@(employee.TwitLink != null ? "" : "N/A")</a></p>
                <p class="card-text">Linked-In: <a>@employee.LinkedLink@(employee.LinkedLink != null ? "" : "N/A")</a></p>
            </div>
        </div>
    }
</div>
<a class="btn btn-light fw-bold fs-4" asp-action="Index" asp-controller="Department">Back</a>
