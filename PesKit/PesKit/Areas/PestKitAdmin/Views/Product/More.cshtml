@model Product
<div class="container">
    <div class="card mb-3" style="max-width: 99%;">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="~/img//@Model.Img" class="img-fluid rounded-start w-75" alt="@Model.Name">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">Name: @Model.Name</h5>
                    <p class="card-text">Price: $@Model.Price </p>
                    <p class="card-text">Description: @Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-light fw-bold fs-4" asp-action="Index" asp-controller="Product">Back</a>
