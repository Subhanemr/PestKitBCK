@model CreateProjectVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Create Project</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MainPhoto">Main Image</label>
                    <input asp-for="MainPhoto" accept="image/*" class="form-control" placeholder="MainPhoto">
                    <span asp-validation-for="MainPhoto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HoverPhoto">Hover Image</label>
                    <input asp-for="HoverPhoto" accept="image/*" class="form-control" placeholder="HoverPhoto">
                    <span asp-validation-for="HoverPhoto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Photos">Other Images</label>
                    <input asp-for="Photos" accept="image/*" class="form-control" placeholder="MainPhoto">
                    <span asp-validation-for="Photos" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <a class="btn btn-light" asp-action="Index" asp-controller="Project">Cancel</a>
            </form>
        </div>
    </div>
</div>
