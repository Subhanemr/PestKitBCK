@model List<Product>

<!-- Product Start -->
<div class="container-fluid services py-5">
    <div class="container text-center py-5">
        <div class="text-center mb-5 wow fadeInUp" data-wow-delay=".3s">
            <h5 class="mb-2 px-3 py-1 text-dark rounded-pill d-inline-block border border-2 border-primary">Our Product</h5>
            <h1 class="display-5">Common Pest Control Products</h1>
        </div>
        <div class="row g-5">
            @foreach (Product item in Model)
            {
                <div class="col-xxl-3 col-lg-6 col-md-6 col-sm-12 wow fadeInUp" data-wow-delay=".3s">
                    <div class="bg-light rounded p-5 services-item">
                        <div class="d-flex" style="align-items: center; justify-content: center;">
                            <img src="~/img/@item.Img" class="w-100">
                        </div>
                        <h4>@item.Name</h4>
                        <p class="fs-5">@item.Description</p>
                        <p class="fs-5">$@item.Price</p>
                        <a asp-action="addBasket" asp-controller="Cart" asp-route-id="@item.Id" type="button" class="add-to-cart btn btn-primary border-0 rounded-pill px-4 py-3">Add to BasKet</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Product End -->