@model RegisterVM    

<!-- Register Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="row">
            <div class="col-4 offset-4">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly">
                    </div>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="mb-3">
                     <label asp-for="Surname" class="form-label">Surname</label>
                        <input asp-for="Surname" class="form-control" placeholder="Surname">
                        <span class="text-danger" asp-validation-for="Surname"></span>

                </div>
                <div class="mb-3">
                        <label asp-for="UserName" class="form-label">User Name</label>
                        <input asp-for="UserName" class="form-control" placeholder="User Name">
                        <span class="text-danger" asp-validation-for="UserName"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Email">
                        <span class="text-danger" asp-validation-for="Email"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Password">
                        <span class="text-danger" asp-validation-for="Password"></span>

                </div>
                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password">
                        <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-warning w-100">Register</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Register End -->